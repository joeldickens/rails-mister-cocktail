<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
</head>
<center><div class="banner">
  <div class="banner-content">
    <h1>Cocktails</h1>
    <br>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div></center>
<br>
<center><div class="container">
  <br>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card-product">
          <img src="https://previews.123rf.com/images/iuliian/iuliian1710/iuliian171000233/89088811-cold-pink-cocktail-with-fresh-grapefruit-lime-and-ice-cubes-on-concrete-background-paloma-square-for.jpg" />
          <div class="card-product-infos">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
            <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash destroy_cocktail"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
