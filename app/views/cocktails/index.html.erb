<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
</head>
<center><div class="banner">
  <div class="banner-content">
    <h1>A beautiful list of cocktails!</h1>
    <br>
    <%= link_to "Add your own cocktail!", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div></center>
<br>
<div class="container">
  <br>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card-product">
          <div class="card-product-infos">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
            <p1><%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash destroy_cocktail"></i></p1>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
